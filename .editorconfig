# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,jsx,json}]
indent_size = 2

[Makefile]
indent_style = tab

[package.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
